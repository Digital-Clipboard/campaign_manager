# Database Configuration
DATABASE_URL="postgresql://campaign_user:campaign_pass@localhost:5432/campaign_manager"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# External Service URLs (MCP Agents)
MARKETING_AGENT_URL=http://localhost:3003
MAILJET_AGENT_URL=http://localhost:3004
SLACK_MANAGER_URL=http://localhost:3005

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword

# Notification Configuration
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# Background Jobs
QUEUE_CONCURRENCY=10
QUEUE_MAX_STALLED=5
QUEUE_MAX_STALLED_INTERVAL=30000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
HELMET_CSP_ENABLED=true

# Development
ENABLE_QUERY_LOGGING=false
ENABLE_DEBUG_ROUTES=false